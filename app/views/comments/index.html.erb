<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.id %></td>
    <td><%= comment.user.username %></td>
    <td><%= comment.conversation.title %></td>
    <td><%= normalizar_texto(comment.body, 50)%></td>
    <td><%= link_to 'Ver', comment %></td>
    <td><%= link_to 'Editar', edit_comment_path(comment) %></td>
    <td><%= link_to 'Destruir', comment, confirm: 'Â¿Estas seguro?', method: :delete %></td>
  </tr>
<% end %>
</table>

