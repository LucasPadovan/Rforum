<p id="notice"><%= notice %></p>

<p>
  <b>Id:</b>
  <%= @comment.id %>
</p>

<p>
  <b>Usuario:</b>
  <%= @comment.user.username %>
</p>

<p>
  <b>Conversacion:</b>
  <%= @comment.conversation.title %>
</p>

<p>
  <b>Cuerpo:</b>
  <%= sanitize(BBCoder.new(@comment.body).to_html.html_safe) %>
</p>


<%= link_to 'Editar', edit_comment_path(@comment) %> |
<%= link_to 'Volver', comments_path %>
