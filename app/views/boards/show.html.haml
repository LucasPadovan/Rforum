%p#notice= notice
%h1
  #titulo= @board.title
= link_to 'Panel Principal', boards_path
- unless @board.padre == 1
  - board= Board.find(@board.padre)
  = link_to board.title, board
= link_to @board.title, @board
%br/
%br/
- hijos = Board.find_all_by_padre(@board.id)
- unless hijos.count == 0
  #forosHijoEnBoardShow
    Subforos:
    - hijos.each do |h|
      = "|"
      = link_to h.title, h
      |
  %br/
%table#foros
  %tr#cabecera
    %th Tema
    %th Resumen
    %th Comentarios
    %th Ultimo comentario
    %th
  - @board.conversations.each do |conversation|
    %tr{:id => cycle('postPar', 'postImpar')}
      %td
        = link_to conversation.title, board_conversation_path(:board_id=>@board, :id=>conversation)
        #creadoPor
          por #{conversation.user.username}
      %td= normalizar_texto(conversation.comments.first.body, 40)
      %td= conversation.comments.count-1
      %td
        - if conversation.comments.count >= 2
          = conversation.comments.find(:last).user.username
          dijo:
          = link_to(normalizar_texto(conversation.comments.find(:last).body, 40), board_conversation_path(:board_id=>@board, :id=>conversation)+conversation.ultima_pagina+"#"+conversation.comments.last.id.to_s)
          %br/
          A las
          = conversation.comments.find(:last).created_at.to_s(:detallada)
        - else
          Sin respuesta todavia, se el primero en comentar!
      %td
        - if es_administrador
          = link_to 'Destroy', board_conversation_path(conversation.board.id, conversation.id), confirm: 'Are you sure?', method: :delete
%br/
- if es_administrador
  = link_to 'Editar', edit_board_path(@board)
  = "|"
= link_to 'Nuevo tema', new_board_conversation_url(@board)