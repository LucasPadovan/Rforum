= form_for(@board) do |f|
  - if @board.errors.any?
    #error_explanation
      %h2
        = pluralize(@board.errors.count, "error")
        prohibited this board from being saved:
      %ul
        - @board.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label "Titulo"
    %br/
    = f.text_field :title
  .field
    = f.label :categoria
    %br/
    = f.text_field :categoria
  .field
    = f.label :descripcion
    %br/
    = f.text_field :descripcion, :size=>75
  .field
    = f.label :padre
    %br/
    = f.select :padre, Board.padres.map{|r|[r.title,r.id]}, :prompt => 'Seleccione el directorio raÃ­z'
  .actions
    = f.submit(:value => "Crear foro/subforo")