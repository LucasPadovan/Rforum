= notice
%h1
  #cabecera Panel principal
- if current_user
  - @principales = Board.principales
  %table#foros
    - @principales.each do |board|
      %tr#principal
        %td
          = link_to board.title, board
          #categoria
            = board.descripcion
            %br/
            Categoría:
            = board.categoria
        - if board.conversations.exists?
          %td#tyc
            - ntemas= board.conversations.count
            - ncoment= -ntemas
            - ultimaconv = board.conversations.find( :last )
            - @fechaultcoment = ultimaconv.updated_at
            - @comentario = ultimaconv.comments.find( :last )
            - board.conversations.each do |conv|
              - ncoment+=conv.comments.count
              - comentario=conv.comments.find(:last)
              - if @fechaultcoment.to_time <= comentario.created_at.to_time
                - @comentario=comentario
                - @fechaultcoment=comentario.created_at
            = ntemas
            = "/"
            = ncoment
          %td#ultcoment
            = link_to(@comentario.user.username, @comentario.user)
            dijo:
            = normalizar_texto( @comentario.body, 40)
            %br/
            En:
            = link_to @comentario.conversation.title, board_conversation_path( :board_id => board, :id => @comentario.conversation) + @comentario.conversation.ultima_pagina+"#"+@comentario.id.to_s
            %br/
            A las:
            = @fechaultcoment.to_s(:detallada)
        - else
          %td#tyc 0/0
          %td#ultcoment Sin comentarios todavia
        %td
          - if es_administrador
            = link_to 'Edit', edit_board_path(board)
            %br/
            = link_to 'Destroy', board, confirm: 'Are you sure?', method: :delete
            %br/
      %tr#separadorForos
        %td
        %td
        %td
        - if es_administrador
          %td
      - @subforos = Board.foros(board.id)
      - @subforos.each do |subforo|
        %tr#subforo
          %td
            = link_to subforo.title, subforo
            #categoriasubforo
              = subforo.descripcion
              %br/
              Categoría
              = subforo.categoria
          - if subforo.conversations.exists?
            %td#tyc
              - ntemas= subforo.conversations.count
              - ncoment= -ntemas
              - ultimaconv = subforo.conversations.find(:last)
              - @fechaultcoment=ultimaconv.updated_at
              - @comentario=ultimaconv.comments.find(:last)
              - subforo.conversations.each do |conv|
                - ncoment+=conv.comments.count
                - comentario=conv.comments.find(:last)
                - if @fechaultcoment.to_time <= comentario.created_at.to_time
                  - @comentario=comentario
                  - @fechaultcoment=comentario.created_at
              = ntemas
              = "/"
              = ncoment
            %td#ultcoment
              = link_to @comentario.user.username, @comentario.user
              dijo:
              = normalizar_texto(@comentario.body, 40)
              %br/
              En:
              = link_to @comentario.conversation.title, board_conversation_path(:board_id=>board, :id=>@comentario.conversation) + @comentario.conversation.ultima_pagina+"#"+@comentario.id.to_s
              %br/
              A las:
              = @fechaultcoment.to_s( :detallada )
          - else
            %td#tyc 0/0
            %td#ultcoment Sin comentarios todavia
          %td
            - if es_administrador
              = link_to 'Edit', edit_board_path(subforo)
              %br/
              = link_to 'Destroy', subforo, confirm: 'Are you sure?', method: :delete
              %br/
  %br/
  - if es_administrador
    = link_to 'Nuevo Foro', new_board_path
- else
  Por favor logueate o registrate para ver el contenido