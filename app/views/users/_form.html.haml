= form_for(@user) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - @user.errors.full_messages.each do |msg|
          %li
            = msg
  .field
    = f.label :username, "Nombre de usuario"
    %br/
    = f.text_field :username
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .field
    = f.label :password, "Contraseña"
    %br/
    = f.password_field :password
  .field
    = f.label :password_confirmation, "Confirmacion de la contraseña"
    %br/
    = f.password_field :password_confirmation
  .field
    = f.label :nombre
    %br/
    = f.text_field :nombre
  .field
    = f.label :apellido
    %br/
    = f.text_field :apellido
  .field
    = f.label :fechanac, "Fecha de nacimiento"
    %br/
    = f.date_select :fechanac, :start_year => 1930, :end_year=> Time.now.year
  .field
    = f.label :numtel, "Numero telefonico"
    %br/
    = f.text_field :numtel
  .field
    = f.label :pais, "País"
    %br/
    = f.text_field :pais
  .field
    = f.label :provincia, "Provincia"
    %br/
    = f.text_field :provincia
  .field
    = f.label :avatar
    %br/
    = f.text_field :avatar
  .field
    = f.label :firma
    %br/
    = render 'commons/textarea_tools'
    = f.text_area(:firma, :size=>"90x10")
  .field
    = f.label :pagweb, "Pagina web"
    %br/
    = f.text_field :pagweb
  .field
    = f.label :notify_by_email, "Recibir notificaciones por correo"
    %br/
    = f.check_box :notify_by_email
  - if es_administrador
    .field
      = f.label :rango, "Rango"
      %br/
      = f.text_field :rango
  .actions
    = f.submit(:value => "Aceptar")