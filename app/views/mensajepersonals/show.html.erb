<% if get_usuario == @mensajepersonal.remitente || get_usuario == @mensajepersonal.destinatario%>
    <h1><div id="titulo">Mensaje</div></h1>
    <p>
      <b>De:</b>
      <%= @mensajepersonal.remitente.username %>
    </p>

    <p>
      <b>Para:</b>
      <%= @mensajepersonal.destinatario.username %>
    </p>
    <% @messages.each do |message| %><br/>
        <p>
          <b><%= message.user.username %>: </b>
          <div id="cuerpoPM"><%= sanitizar_bbcode(message.body) %></div>
        </p>
    <% end %>


    <%= link_to 'Responder', reply_mensajepersonal_path(:id => @mensajepersonal) %>
    
