        <%#= f.text_area(:body, :size => "90x20")%>
        <%#= f.submit(:value => "Enviar respuesta")%>
    <%# end %>
<% else %>
    <h1><div id="titulo">No tienes acceso a este mensaje</div></h1>
<% end %>

